---
import { SearchBar } from "./SearchBar";
import ControlIcon from "@/assets/ControlIcon.astro";
import HomeIcon from "@/assets/HomeIcon.astro";
import StoreIcon from "@/assets/StoreIcon.astro";
---

<header
  class="bg-gray-900/90 backdrop-blur-md border-b border-gray-800 text-white py-4 fixed w-full z-10 top-0 shadow-lg"
  role="banner"
>
  <div
    class="container flex flex-col md:flex-row items-center justify-center md:justify-between w-5/6 mx-auto"
  >
    <nav class="mb-4 md:mb-0" aria-label="Navegación principal">
      <ul class="flex justify-center items-center space-x-6 mt-2 md:mt-0">
        <li>
          <a
            href="/"
            class="flex gap-2 items-center text-2xl font-bold hover:text-blue-400 transition-colors duration-200 focus:outline-none focus:ring-2 focus:ring-blue-500 rounded-lg px-3 py-2"
            title="Ir a la página de inicio"
          >
            <ControlIcon /> 
            <span class="bg-gradient-to-r from-blue-500 to-purple-500 bg-clip-text text-transparent">
              GamePrice
            </span>
          </a>
        </li>
        <li>
          <a
            href="/"
            class="text-gray-300 hover:text-white hover:bg-gray-800 transition-colors duration-200 rounded-lg px-3 py-2 text-sm font-medium flex items-center"
          >
            <HomeIcon />
            Inicio
          </a>
        </li>
        <li>
          <a
            href="/stores"
            class="text-gray-300 hover:text-white hover:bg-gray-800 transition-colors duration-200 rounded-lg px-3 py-2 text-sm font-medium flex items-center"
          >
            <StoreIcon />
            Tiendas
          </a>
        </li>
      </ul>
    </nav>

    <SearchBar client:load />
  </div>
</header>
